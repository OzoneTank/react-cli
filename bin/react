#!/usr/bin/env node
'use strict';

var commander = require('commander');
var cli = require('../');

commander
  .version(require('../package.json').version)
  .usage('[source file]')
  .option('-p, --props [props]', 'Props to pass into the component')
  .option('-b64, --base64 [base64]', 'Props have been passed as a base64 string')
  .parse(process.argv);

if (commander.args[0]) {
  var html = cli.render(commander.args[0], commander.props, {
    isBase64: commander.base64
  });
  console.log(html);
} else {
  commander.help();
}
